@model IEnumerable<AppSantiago.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Estudiantes</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Estudiante</a>
</p>
<form asp-action="Index" method="get" class="form-inline">
    <div class="form-group">
        <a class="btn btn-sm btn-outline-success" asp-action="Index">Restaurar lista</a>
        Buscar por nombre: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Buscar" class="btn btn-dark" />
    </div>
 
</form>
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th>
                Acciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.StudentId">Editar</a> |
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.StudentId">Detalle</a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.StudentId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
